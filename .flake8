[flake8]
select = B,B9,C,D,DAR,E,F,N,RST,W
ignore = E203,E501,RST201,RST203,RST210,RST301,W503
max-line-length = 88
max-complexity = 15
docstring-convention = google
rst-roles = class,const,func,meth,mod,ref
rst-directives = deprecated
per-file-ignores = tests/*:D100,D103


# For darglint plugin
strictness = long
